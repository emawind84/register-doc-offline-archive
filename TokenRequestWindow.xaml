<Window x:Class="pmis.TokenRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pmis"
        mc:Ignorable="d"
        Title="Token Request" Height="224.771" Width="164.784" ResizeMode="NoResize" Icon="resources/sangah_logo_16.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="usernameLabel" Content="Username" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Height="26" Width="64"/>
        <TextBox x:Name="pmisUsername" Height="23" Margin="10,31,10.4,0" TextWrapping="Wrap" VerticalAlignment="Top" TabIndex="0"/>
        <Label x:Name="passwordLabel" Content="Password" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" Height="26" Width="59"/>
        <Grid Margin="10,0,10.4,9.4" Height="38" VerticalAlignment="Bottom">
            <Button x:Name="requestTokenButton" Content="Request Token" Click="RequestPMISToken" HorizontalContentAlignment="Center" Margin="0,0,0,5.8" TabIndex="2"/>
        </Grid>
        <PasswordBox x:Name="pmisPassword" Margin="10,84,10.4,0" VerticalAlignment="Top" Height="23" TabIndex="1"/>
        <CheckBox x:Name="passwordBase64Encoded" Content="Send Encoded" Margin="16,116,17.4,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
